#! /bin/sh

cd /usr/src
wget http://garr.dl.sourceforge.net/project/imagemagick/6.9.1-sources/ImageMagick-6.9.1-0.tar.gz
tar xvf ImageMagick-6.9.1-0.tar.gz
cd ImageMagick-6.9.1-0/
./configure --with-modules \
	--with-imagick=/opt/local
make 
checkinstall -D -y \
  --install=no \
  --fstrans=no \
  --reset-uids=yes \
  --pkgname=imagemagick \
  --pkgversion=6.9.1-0 \
  --pkglicense=GPL \
  --maintainer="lagout " \
  --pakdir=/usr/src/deb \
  --nodoc

cd /usr/src/deb

dpkg -i imagemagick*.deb
