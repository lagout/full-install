#! /bin/sh
execPath=$(readlink -f $(dirname $0))

apt-get build-dep openssl -y
mkdir /usr/src/ssl
cd /usr/src/ssl
wget  --no-check-certificate  http://www.openssl.org/source/openssl-1.0.1t.tar.gz
tar zxvf openssl-1.0.1t.tar.gz
cd openssl-1.0.1t


./config --prefix=/usr         \
         --openssldir=/etc/ssl \
         shared                \
         zlib-dynamic 
make depend
make
checkinstall -D -y \
	--install=no \
	--fstrans=no \
	--reset-uids=yes \
	--pkgname=openssl \
	--pkgversion=1.0.1t \
	--pkglicense=GPL \
	 --pakdir=/usr/src/deb  \
	--maintainer="lagout " \
	--nodoc

cd /usr/src/deb

dpkg -i openssl*.deb

bash $execPath/ca-cert-nstall




